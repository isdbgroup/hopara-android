<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="waikato.ac.nz.hopara_android.MainScreenActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/main_story"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="6dp" />


    <Button
        android:id="@+id/butTerminology"
        android:layout_width="130dp"
        android:layout_height="47dp"
        android:text="Terminology"
        tools:textAlignment="center"
        tools:layout_editor_absoluteX="127dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewStory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/butPukete"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:text="Pukete Pa"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="127dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/butTerminology"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
                android:id="@+id/butKirikiriroa"
                android:layout_width="130dp"
                android:layout_height="47dp"
                android:text="Kirikiriroa Pa"
                android:textAlignment="center"
            tools:layout_editor_absoluteX="127dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/butPukete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>
